# http://editorconfig.org
root = true

# 空格替代Tab缩进 并且设置字符集与换行符
[*]
#缩进风格：空格
indent_style = space
#缩进大小
indent_size = 4
#字符集utf-8
charset = utf-8
#换行符lf
end_of_line = lf
#是否删除行尾的空格
trim_trailing_whitespace = true
#是否在文件的最后插入一个空行
insert_final_newline = true

[*.java]
indent_style = tab

[*.{json,yml}]
indent_size = 2

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false
